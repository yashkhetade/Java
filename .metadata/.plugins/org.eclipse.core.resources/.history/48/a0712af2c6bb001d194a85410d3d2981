package mypack;
import java.util.*;

public class Recursion1 {
	
	public static int factorial(int n) {
		
		if(n<=1) {
			
			return 1;
		}
		
		return n*factorial(n-1);
		
	}

	
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		
		int n;
		
		System.out.println("enter the value of n : ");
		n=sc.nextInt();
		
		
		
		
		sc.close();
	}
}
